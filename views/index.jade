h1= title

div.scoreboard
  li.score.base(style='display:none;')
    span.points
    span.name

  ol.scores
    for score in scores
      li.score
        span.points= score.score
        span.name= score.name

div.todos
  h2 To Do
  ul.todos
    li.todo.base(style='display:none;')
      span.points
      span.text
      span.due
      button.done Done
      ul.assigned-to

    for todo in todos
      li.todo
        span.points(class='points-' + todo.points)= todo.points
        span.text= todo.text
        span.due Due #{todo.due}
        button.done Done
        ul.assigned-to
          for name in todo.assigned
            li= name

div.done
  h2 Done
  ul.done
    li.done.base(style='display:none;')
      span.points
      span.text
      ul.assigned-to
      button.not-done Not Done

    for todo in done
      li.done
        span.points(class='points-' + todo.points)= todo.points
        span.text= todo.text
        ul.assigned-to
          for name in todo.assigned
            li= name
        button.not-done Not Done
